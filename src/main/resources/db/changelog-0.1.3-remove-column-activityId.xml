<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet author="murygina" id="remove_column_activityId_from_book_entry">
        <preConditions>
            <tableExists tableName="BookEntry"/>
        </preConditions>
        <dropColumn tableName="BookEntry" columnName="activityId"/>
    </changeSet>

    <changeSet author="murygina" id="remove_column_activityId_from_favorite">
        <preConditions>
            <tableExists tableName="Favorite"/>
        </preConditions>
        <dropColumn tableName="Favorite" columnName="activityId"/>
    </changeSet>

</databaseChangeLog>